@page
@model MyApp.Namespace.ContactModel
@{
}

<div class="row">
    <div class="col-log-9 mx-auto p-3">
        <h3 class="mb-3 font-weight-normal text-center pb-4">
            Contact Form
        </h3>

        @if (Model.ErrorMessage.Length > 0)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.ErrorMessage</strong>
                <button type="button" class="btn-close" data-bs-dimiss='alert' aria-label="Close"></button>
            </div>
        }
        else if (Model.SuccessMessage.Length > 0)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@Model.SuccessMessage</strong>
                <button type="button" class="btn-close" data-bs-dimiss='alert' aria-label="Close"></button>
            </div>
        }

        <form action="" method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" for="firstname">First Name *</label>
                <div class="col-sm-8">
                    <input type="text" id="firstname" class="from-control" name="firstname" value="@Model.FirstName" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" for="lastname">Last Name *</label>
                <div class="col-sm-8">
                    <input type="text" id="lastname" class="from-control" name="lastname" value="@Model.LastName" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" for="email">E-mail *</label>
                <div class="col-sm-8">
                    <input type="email" id="email" class="from-control" name="email" value="@Model.Email" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" for="phone">Phone</label>
                <div class="col-sm-8">
                    <input type="text" id="phone" class="from-control" name="phone" value="@Model.Phone" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" for="subject">Subject *</label>
                <div class="col-sm-8">
                    <select class="form-select" name="subject" id="subject">
                        @if (Model.Subject.Equals("Order Status"))
                        {
                            <option value="Order Status" selected>Order Status</option>
                        }
                        else
                        {
                            <option value="Order Status">Order Status</option>
                        }

                        @if (Model.Subject.Equals("Refund Request"))
                        {
                            <option value="Refund Request" selected>Refund Request</option>
                        }
                        else
                        {
                            <option value="Refund Request">Refund Request</option>
                        }

                        @if (Model.Subject.Equals("Job Application"))
                        {
                            <option value="Job Application" selected>Job Application</option>
                        }
                        else
                        {
                            <option value="Job Application">Job Application</option>
                        }

                        @if (Model.Subject.Equals("Other"))
                        {
                            <option value="Other" selected>Other</option>
                        }
                        else
                        {
                            <option value="Other">Other</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" for="message">Message *</label>
                <div class="col-sm-8">
                    <textarea name="message" id="message" class="form-control">@Model.Message</textarea>
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-8">
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>
